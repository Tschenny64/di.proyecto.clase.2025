<Window x:Class="di.examen._1EV._2025.Frontend.Dialogos.GestionEmpleados"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:di.examen._1EV._2025.Frontend.Dialogos"
        mc:Ignorable="d"
        x:Name="gestionEmpleado"
        WindowStyle="None"
        Loaded="gestionEmpleado_Loaded"
        Title="GestionEmpleados" Height="450" Width="800">
    <Grid>

        <StackPanel Grid.Row="0" Grid.ColumnSpan="4" >
            <TextBlock Text="DASHBOARD" Margin="20" FontSize="20" FontWeight="Bold" />
        </StackPanel>
        <Button Click="Button_Click_Minimizar" Grid.Row="0" Grid.Column="3" Width="20" Margin="0,0,40,0" Background="#05d79e" HorizontalAlignment="Right" Height="10" VerticalAlignment="Top">
            <Image Source="/Recursos/Iconos/minimizar.png" Width="20" />
        </Button>
        <Button Click="Button_Click_Maximizar" Grid.Row="0" Grid.Column="3" Width="20" Background="#6266f7" HorizontalAlignment="Right" Height="10" VerticalAlignment="Top" Margin="0,0,20,0">
            <Image Source="/Recursos/Iconos/maximizar.png" Width="20"/>
        </Button>
        <Button Click="Button_Click_Cerrar" Grid.Row="0" Grid.Column="3" Width="20" Background="#ff5a82" HorizontalAlignment="Right" Height="10" VerticalAlignment="Top">
            <Image Source="/Recursos/Iconos/cerrar.png" Width="20"/>
        </Button>
        <Grid Background="LightGray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*" />
                <ColumnDefinition Width="5*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.ColumnSpan="2" Grid.Row="0" Text="GESTIÓN DE EMPLEADOS"
         FontSize="30" HorizontalAlignment="Center" FontWeight="Bold"/>

            <TextBlock Grid.Row="1" Grid.ColumnSpan="2"
         Text="Los campos obligatorios se marcan en negrita" FontWeight="Bold"
         Margin="5,0,0,15" />
            <TextBlock Grid.Row="2" Grid.ColumnSpan="2" FontSize="20"
         Text="DATOS PERSONALES" Margin="15,0,0,15" />
            <Separator Grid.Row="2" Margin="5,30,5,0" Grid.ColumnSpan="2"></Separator>

            <StackPanel Grid.Row="3">
                <TextBlock Text="Nombre:" FontWeight="Bold" Margin="20,0,0,0" />
            <TextBox HorizontalAlignment="Left" Margin="20,0,20,0" x:Name="txtNombre" Width="500" Height="30"/>
            </StackPanel>
            <StackPanel Grid.Row="4">
                <TextBlock Text="Segundo apellido:" Margin="20,10,0,0" />
                <TextBox HorizontalAlignment="Left" Margin="20,0,20,0" x:Name="txtSegundoApellido" Width="500" Height="30"/>
            </StackPanel>
            <StackPanel Grid.Row="3" Grid.Column="1">
                <TextBlock Text="Primer apellido:" FontWeight="Bold" Margin="20,0,0,0" />
                <TextBox  HorizontalAlignment="Left" Margin="20,0,20,0" x:Name="txtPrimerApellido" Width="500" Height="30"/>
            </StackPanel>
            <StackPanel Grid.Row="4" Grid.Column="1">
                <TextBlock Text="Correo electrónico:" FontWeight="Bold" Margin="20,10,0,0" />
                <TextBox  HorizontalAlignment="Left" Margin="20,0,20,0" x:Name="txtCorreo" Width="500" Height="30"/>
            </StackPanel>
            <TextBlock Grid.Row="5" Grid.ColumnSpan="2" FontSize="20"
                       Text="DATOS PROFESIONALES" Margin="15,15,0,15" />
            <Separator Grid.Row="5" Margin="5,30,5,0" Grid.ColumnSpan="2"></Separator>

            <StackPanel Grid.Row="6">
                <TextBlock Text="Extensión:" FontWeight="Bold" Margin="20,0,0,0" />
                <TextBox  HorizontalAlignment="Left" Margin="20,0,20,0" x:Name="txtExtension" Width="500" Height="30"/>
            </StackPanel>

            <StackPanel Grid.Row="6" Grid.Column="1">
                <TextBlock Text="Puesto:" Margin="20,0,0,0" />
                <TextBox  HorizontalAlignment="Left" Margin="20,0,20,0" x:Name="txtPuesto" Width="500" Height="30"/>
            </StackPanel>

            <StackPanel Grid.Row="7">
                <TextBlock Text="Jefe:"  Margin="20,10,0,0" />
                <ComboBox HorizontalAlignment="Left" Margin="20,0,20,0" x:Name="cmbEmpleado" Width="500" Height="30"
                          DisplayMemberPath="Nombre"/>
            </StackPanel>

            <StackPanel Grid.Row="7" Grid.Column="1">
                <TextBlock Text="Oficina:"  Margin="20,10,0,0" />
                <ComboBox HorizontalAlignment="Left" Margin="20,0,20,0" x:Name="cmbOficina" Width="500" Height="30"
                          DisplayMemberPath="Nombre"/>
            </StackPanel>


            <Button Grid.Column="0" Grid.Row="8" Width="100" Height="30" Background="Transparent" BorderBrush="Gray" HorizontalAlignment="Right" Margin="0,10,20,0" x:Name="btnCancelarEmpleado" Click="btnCancelarEmpleado_Click" >
                <TextBlock Text="Cancelar" FontWeight="Bold" Foreground="Gray"/>
            </Button>
            <Button Grid.Column="1" Grid.Row="8" Width="100" Height="30" HorizontalAlignment="Left"
          Background="Blue" Margin="20,10,0,0" x:Name="btnGuardarEmpleado" Click="btnGuardarEmpleado_Click">
                <TextBlock Text="Guardar" Foreground="White" FontWeight="Bold"/>
            </Button>
            
        </Grid>
    </Grid>
</Window>
