<Window x:Class="di.examen._1EV._2025.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:di.examen._1EV._2025"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="GESTIÓN JARDINERIA" Height="800" Width="1450">

    <DockPanel>
        <!-- Menú lateral a la izquierda -->
        <Grid DockPanel.Dock="Left" Background="Blue" Width="70">
            <StackPanel x:Name="Menu" Margin="0">
                <!-- Título del panel -->
                <Grid>
                    <Image Source="/Recursos/Iconos/dashboard.png" Width="30" Height="30" Margin="10,16" 
                     />
                    <ListBoxItem 
                    x:Name="ListViewItemMenu" Content="" Padding="37 14" FontSize="15" 
                    Foreground="White" />
                </Grid>

                <!-- Sección Préstamos -->
                <Grid>
                    <Button Background="Transparent" BorderBrush="Transparent">
                        <Image Source="/Recursos/Iconos/oficina.png"
                    Width="30" Height="30" Margin="10,16"  />
                    </Button>
                </Grid>

                <!-- Sección Artículos -->
                <Grid>
                    <Button Background="Transparent" BorderBrush="Transparent">
                        <Image Source="/Recursos/Iconos/admon.png"  Width="30" Height="30" Margin="10,16"  />
                    </Button>
                </Grid>

                <!-- Sección Administación -->
                <Grid>
                    <Button Background="Transparent" BorderBrush="Transparent">
                        <Image Source="/Recursos/Iconos/pedidos.png" Width="30" Height="30" Margin="10,16" />
                    </Button>
                </Grid>

                <!-- Sección Inventario -->
                <Grid>
                    <Button Background="Transparent" BorderBrush="Transparent">
                        <Image Source="/Recursos/Iconos/cliente.png" Width="30" Height="30" Margin="10,16" />
                    </Button>
                </Grid>

                <!-- Sección Información -->
                <Grid>
                    <Button Background="Transparent" BorderBrush="Transparent" x:Name="btnGestionEmpleado" Click="btnGestionEmpleado_Click"> 
                        <Image Source="/Recursos/Iconos/empleado.png"    Width="30" Height="30" Margin="10,16" />
                    </Button>
                </Grid>
                <Grid>
                    <Button Background="Transparent" BorderBrush="Transparent">
                        <Image Source="/Recursos/Iconos/salir.png" Width="30" Height="30" Margin="10,360" VerticalAlignment="Bottom" />
                    </Button>
                </Grid>

            </StackPanel>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*" />
                <ColumnDefinition Width="2.5*" />
                <ColumnDefinition Width="2.5*" />
                <ColumnDefinition Width="2.5*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.ColumnSpan="4" >
                <TextBlock Text="DASHBOARD" Margin="20" FontSize="20" FontWeight="Bold" />
            </StackPanel>
            <Button Click="Button_Click_Minimizar" Grid.Row="0" Grid.Column="3" Width="20" Margin="0,0,40,0" Background="#05d79e" HorizontalAlignment="Right" Height="10" VerticalAlignment="Top">
                <Image Source="/Recursos/Iconos/minimizar.png" Width="20" /> 
            </Button>
            <Button Click="Button_Click_Maximizar" Grid.Row="0" Grid.Column="3" Width="20" Background="#6266f7" HorizontalAlignment="Right" Height="10" VerticalAlignment="Top" Margin="0,0,20,0">
                <Image Source="/Recursos/Iconos/maximizar.png" Width="20"/>
            </Button>
            <Button Click="Button_Click_Cerrar" Grid.Row="0" Grid.Column="3" Width="20" Background="#ff5a82" HorizontalAlignment="Right" Height="10" VerticalAlignment="Top">
                <Image Source="/Recursos/Iconos/cerrar.png" Width="20"/>
            </Button>



            <StackPanel Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="50,0,0,0" Background="#6266f7" Width="277">
                <TextBlock Text="Total Pedidos" FontSize="12" FontWeight="Bold" Foreground="White" Margin="0,0,0,10" />
                <Image Source="/Recursos/Iconos/pedidos.png" Width="30" Height="30" Margin="10,0,0,10" HorizontalAlignment="Left" />
                <TextBlock Text="Por mes" FontSize="16" Foreground="White" />
            </StackPanel>
            <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="50,0,0,0" Background="#05d79e" Width="277">
                <TextBlock Text="Clientes registrados" FontSize="12" FontWeight="Bold" Foreground="White" Margin="0,0,0,10" />
                <Image Source="/Recursos/Iconos/cliente.png" Width="30" Height="30" Margin="10,0,0,10" HorizontalAlignment="Left" />
                <TextBlock Text="Clientes conectados" FontSize="16" Foreground="White" />
            </StackPanel>
            <StackPanel Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="50,0,0,0" Background="#807fff" Width="277">
                <TextBlock Text="Stock de Producto" FontSize="12" FontWeight="Bold" Foreground="White" Margin="0,0,0,10" />
                <Image Source="/Recursos/Iconos/pedidos.png" Width="30" Height="30" Margin="10,0,0,10" HorizontalAlignment="Left" Grid.Row="1"/>
                <TextBlock Text="Unidades por mes" FontSize="16" Foreground="White" />
            </StackPanel>
            <StackPanel Grid.Row="1" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="50,0,0,0" Background="#ff5a82" Width="277">
                <TextBlock Text="Numero de oficinas" FontSize="12" FontWeight="Bold" Foreground="White" Margin="0,0,0,10" />
                <Image Source="/Recursos/Iconos/oficina.png" Width="30" Height="30" Margin="10,0,0,10" HorizontalAlignment="Left" />
                <TextBlock Text="En el país" FontSize="16" Foreground="White" />
            </StackPanel>

            <StackPanel Grid.Row="3">
                <Image Source="/Recursos/Imagenes/jardineria.png" Width="800" Height="500" />
            <Image Source="/Recursos/Imagenes/grafico.jpg" Width="800" Height="500"/>

            </StackPanel>



        </Grid>
    </DockPanel>
</Window>
