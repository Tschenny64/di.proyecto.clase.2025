<UserControl x:Class="UD4_Ejemplo1.Frontend.ControlUsuario.DialogoModelo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UD4_Ejemplo1.Frontend.ControlUsuario"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Nombre -->
            <TextBlock Text="Nombre:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="txtNombre" Grid.Row="0" Grid.Column="1" Margin="5"/>

            <!-- Descripción -->
            <TextBlock Text="Descripción:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="txtDescripcion" Grid.Row="1" Grid.Column="1" Margin="5"/>

            <!-- Marca -->
            <TextBlock Text="Marca:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="txtMarca" Grid.Row="2" Grid.Column="1" Margin="5"/>

            <!-- Modelo -->
            <TextBlock Text="Modelo:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="txtModelo" Grid.Row="3" Grid.Column="1" Margin="5"/>

            <!-- Tipo (ComboBox) -->
            <TextBlock Text="Tipo:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
            <ComboBox x:Name="cmbTipo" Grid.Row="4" Grid.Column="1" Margin="5">
                <ComboBoxItem Content="Electrónico"/>
                <ComboBoxItem Content="Mecánico"/>
                <ComboBoxItem Content="Textil"/>
                <ComboBoxItem Content="Otro"/>
            </ComboBox>
        </Grid>
</UserControl>
