<UserControl x:Class="di.proyecto.clase._2025.Frontend_visual_.ControlUsuarios.UCAdministracion"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:di.proyecto.clase._2025.Frontend_visual_.ControlUsuarios"
             mc:Ignorable="d" 
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <ToolBar>
                <TextBlock TextWrapping="WrapWithOverflow"
                           Text="Espacios"
                           VerticalAlignment="Center">
                    
                </TextBlock>
                
                <Button x:Name="btnAddEspacios"
                        Click="btnAddEspacios_Click"
                        ToolTip="Añadir un nuevo espacio"
                        Content="{mat:PackIcon Kind=SpaceInvaders}" />

                <Button x:Name="btnArbolEspacios"
                        Click="btnArbolEspacios_Click"
                        ToolTip="Listado de espacios con los articulos"
                        Content="{mat:PackIcon Kind=Tree}" />
                <Button x:Name="btnDepartamentos"
                        Click="btnDepartamentos_Click"
                        ToolTip="Listado de departamentos"
                        Content="{mat:PackIcon Kind=Cigar}" />
                <Separator />
            </ToolBar>
            
        </Grid>
        <Grid x:Name="panelCentral" >
            
        </Grid>
    </DockPanel>
</UserControl>
