<UserControl x:Class="di.proyecto.clase._2025.Frontend_visual_.ControlUsuarios.UCListadoArticulos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:di.proyecto.clase._2025.Frontend_visual_.ControlUsuarios"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             x:Name="ucListadoArticulos"
             Loaded="ucListadoArticulos_Loaded"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800">

    <DockPanel>

        <!-- TÍTULO -->
        <Grid DockPanel.Dock="Top">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="LISTADO DE ARTÍCULOS"
                       FontSize="25"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="20"
                       Foreground="Purple"/>
                <StackPanel Orientation="Horizontal"
                            Grid.Row="1">
                    <TextBlock Text="Fecha Inicial:"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="10" />
                    <DatePicker SelectedDate="{Binding fechaInicial}"
                                Margin="0,10,10,10"
                                Width="100"
                                SelectedDateChanged="dpFechaInicial_SelectedDateChanged"
                                x:Name="dpFechaInicial" />

                    <TextBlock Text="Fecha Final:"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="10" />
                    <DatePicker SelectedDate="{Binding fechaFinal}"
                                SelectedDateChanged="dpFechaFinal_SelectedDateChanged"
                                Margin="0,10,10,10"
                                Width="100"
                                x:Name="dpFechaFinal" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="2">
                    <TextBox Width="200" Margin="0,10,5,10" Style="{StaticResource MahApps.Styles.TextBox}"
                            mah:TextBoxHelper.Watermark="Escribe el Nº de Serie"
                            x:Name="txtNumeroSerie"
                            Text="{Binding textoNumSerie, UpdateSourceTrigger=PropertyChanged}"
                            TextChanged="txtNumeroSerie_TextChanged"/>
                    <ComboBox DisplayMemberPath="Nombre"
                              ItemsSource="{Binding listaEspacios}"
                              SelectedItem="{Binding espacioSeleccionado}"
                              Style="{StaticResource MahApps.Styles.ComboBox}"
                              Margin="0,10,10,10"
                              MaxWidth="300"
                              x:Name="cbEspacioArticulo"
                              SelectionChanged="cbEspacioArticulo_SelectionChanged"
                              mah:TextBoxHelper.Watermark="Selecciona un espacio" 
                              />

                    <Button Content="Filtrar"
                            Margin="10,10,0,10"
                            Padding="10,5"
                            x:Name="btnAplicarFiltroFechas"
                            Click="btnAplicarFiltroFechas_Click" />
                </StackPanel>
            </Grid>
        </Grid>

        <!-- GRID PRINCIPAL -->
        <Grid>

            <DataGrid ItemsSource="{Binding listaArticulos}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectedItem="{Binding articulo}"
                      CanUserAddRows="False"
                      ColumnWidth="*"
                      RowDetailsVisibilityMode="VisibleWhenSelected">

                <!-- COLUMNAS -->
                <DataGrid.Columns>

                    <DataGridTextColumn Header="NÚMERO DE SERIE"
                                        Binding="{Binding Numserie}" />

                    <DataGridTextColumn Header="ESTADO"
                                        Binding="{Binding Estado}" />

                    <!-- FECHA ALTA -->
                    <DataGridTemplateColumn Header="FECHA ALTA">

                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Fechaalta, StringFormat=d}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>

                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <DatePicker SelectedDate="{Binding Fechaalta}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>

                    </DataGridTemplateColumn>

                    <!-- USUARIO -->
                    <DataGridTextColumn Header="USUARIO"
                                        Binding="{Binding UsuarioaltaNavigation}" />

                    <!-- MODELO -->
                    <DataGridTextColumn Header="NOMBRE DEL MODELO"
                                        Binding="{Binding ModeloNavigation.Nombre}" />

                    <!-- ESPACIO -->
                    <DataGridTextColumn Header="ESPACIO"
                                        Binding="{Binding EspacioNavigation.Nombre}" />

                    <!-- INFORMACIÓN PRÉSTAMO -->
                    <DataGridTemplateColumn Header="INFORMACIÓN PRÉSTAMO">

                        <DataGridTemplateColumn.CellTemplate>

                            <DataTemplate>

                                <Grid>

                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0"
                                               Grid.Column="0"
                                               Text="Departamento:"
                                               FontWeight="Bold"/>

                                    <TextBlock Grid.Row="0"
                                               Grid.Column="1"
                                               Text="{Binding DepartamentoNavigation.Nombre}"/>

                                    <TextBlock Grid.Row="1"
                                               Grid.Column="0"
                                               Text="Nº PRÉSTAMOS:"
                                               FontWeight="Bold"/>

                                    <TextBlock Grid.Row="1"
                                               Grid.Column="1"
                                               Text="{Binding Salida.Count}"/>

                                </Grid>

                            </DataTemplate>

                        </DataGridTemplateColumn.CellTemplate>

                    </DataGridTemplateColumn>

                </DataGrid.Columns>
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Editar Artículo"
                                  x:Name="miEditarArticulo"
                                  Click="miEditarArticulo_Click">
                            <MenuItem.Icon>
                                <Image Source="/Recursos/Iconos/icons8-crear-nuevo-100.png"
                                         Height="16"
                                         Margin="0,0,10,0" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Borrar Artículo"
                                  x:Name="miBorrarArticulo"
                                  Click="miBorrarArticulo_Click">
                            <MenuItem.Icon>
                                <Image Source="/Recursos/Iconos/icons8-eliminar-100.png"
                                         Height="16"
                                         Margin="0,0,10,0" />
                            </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </DataGrid.ContextMenu>


                <!-- DETALLE DE FILA -->
                <DataGrid.RowDetailsTemplate>

                    <DataTemplate>

                        <DockPanel Margin="10">

                            <TextBlock Text="LISTADO DE PRÉSTAMOS DEL ARTÍCULO"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Margin="5"/>

                            <ListBox ItemsSource="{Binding Salida}"
                                     Margin="5">

                                <ListBox.ItemTemplate>

                                    <DataTemplate>

                                        <Border BorderBrush="Gray"
                                                BorderThickness="1"
                                                Margin="5"
                                                Padding="5">

                                            <StackPanel>

                                                <TextBlock Text="ID Préstamo:"
                                                           FontWeight="Bold"/>

                                                <TextBlock Text="{Binding Idprestamo}"/>

                                                <TextBlock Text="Fecha Salida:"
                                                           FontWeight="Bold"/>

                                                <TextBlock Text="{Binding Fechasalida, StringFormat=d}"/>

                                                <TextBlock Text="Fecha Devolución:"
                                                           FontWeight="Bold"/>

                                                <TextBlock Text="{Binding Fechadevolucion, StringFormat=d}"/>

                                            </StackPanel>

                                        </Border>

                                    </DataTemplate>

                                </ListBox.ItemTemplate>

                            </ListBox>

                        </DockPanel>

                    </DataTemplate>

                </DataGrid.RowDetailsTemplate>

            </DataGrid>

        </Grid>

    </DockPanel>

</UserControl>
