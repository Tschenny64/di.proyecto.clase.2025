<UserControl x:Class="di.proyecto.clase._2025.Frontend_visual_.ControlUsuarios.UCArbolDepartamentos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:di.proyecto.clase._2025.Frontend_visual_.ControlUsuarios"
             mc:Ignorable="d" 
             xmlns:ent="clr-namespace:di.proyecto.clase._2025.Backend.Modelos"
             xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
             x:Name="ucArbolDepartamentos"
             Loaded="ucArbolDepartamentos_Loaded"
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <TextBlock Text="ADMINISTRACIÓN DE DEPARTAMENTOS"
                       FontSize="28"
                       Foreground="DarkViolet"
                       HorizontalAlignment="Center"
                       Margin="10" />
        </Grid>

        <Grid DockPanel.Dock="Left" Width="300">
            <TreeView x:Name="treeDepartamentos" ItemsSource="{Binding listaDepartamentos}">
                <TreeView.Resources>
                    <!--  USUARIOS -->
                    <HierarchicalDataTemplate DataType="{x:Type ent:Departamento}"
                                              ItemsSource="{Binding Usuarios}">
                        <StackPanel Orientation="Horizontal">
                            <mat:PackIcon Kind="Circle" Width="16" Foreground="MediumVioletRed" />
                            <TextBlock Text="{Binding Nombre}" Margin="10,0,0,0"/>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    
                    <DataTemplate DataType="{x:Type ent:Salidum}">
                        <StackPanel Orientation="Horizontal">
                            <mat:PackIcon Kind="CovidTest"
                                          Foreground="#444"
                                          Width="16" />
                            <TextBlock Text="{Binding Fechasalida, StringFormat='dd/MM/yyyy'}"
                                       Foreground="#222"
                                       Margin="10,0,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </TreeView.Resources>
            </TreeView>
        </Grid>
        <Grid x:Name="panelCentral">

        </Grid>
    
    </DockPanel>
</UserControl>
